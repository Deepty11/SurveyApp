<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context=".TakeSurvey1Activity">
    <include layout="@layout/root_layout"/>
    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="20" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="top"
        android:layout_marginTop="20pt"
        android:gravity="center"
        android:text="How frequent you use our product?"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20pt"
        android:entries="@array/spinnerOptions"
        android:gravity="center_horizontal"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100pt"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/prev"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/previousbutton"
            android:textColor="@color/colorOffWhite"
            android:text="Previous" />
        <Button
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80pt"
            android:layout_marginRight="5dp"
            android:background="@drawable/previousbutton"
            android:textColor="@color/colorOffWhite"
            android:text="Next" />
    </LinearLayout>
</LinearLayout>